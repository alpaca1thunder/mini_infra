{# TODO: Split this out maybe #}
{
  admin "unix//var/lib/caddy/admin.socket"
}
(cloudflare) {
  tls {
    dns cloudflare {{ cloudflare_token }}
  }
}
# immich
photos.{{ domain_name }} {
  import cloudflare
  reverse_proxy localhost:{{ immich_port }}
}
# freshrss
feeds.{{ domain_name }} {
  import cloudflare
  reverse_proxy localhost:{{ freshrss_port }}
}
# memos
blog.{{ domain_name }} {
  import cloudflare
  reverse_proxy localhost:{{ memos_port }}
}
# forgejo
git.{{ domain_name }} {
  import cloudflare
  reverse_proxy localhost:{{ forgejo_port }}
}
# plex
plex.{{ domain_name }} {
  import cloudflare
  header {
    Strict-Transport-Security max-age=31536000;
    X-Content-Type-Options nosniff
    X-Frame-Options DENY
    Referrer-Policy no-referrer-when-downgrade
    X-XSS-Protection 1
  }
  reverse_proxy localhost:32400
}
# syncthing
sync.{{ domain_name }} {
  import cloudflare
  reverse_proxy localhost:{{ syncthing_port }}
}
# cockpit
server.{{ domain_name }} {
  import cloudflare
  reverse_proxy localhost:9090 {
    transport http {
      tls_insecure_skip_verify
    }
  }
}
# hoarder
links.{{ domain_name }} {
  import cloudflare
  reverse_proxy localhost:{{ hoarder_port }}
}
# open-webui
chat.{{ domain_name }} {
  import cloudflare
  reverse_proxy localhost:{{ open_webui_port }}
}
